<h1>View All: Cash Wallet Balances</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Upline</th>
    <th>Cash Wallet</th>
    <th>Date</th>
  </tr>
  <% @cashes.each do |t| %>
  <tr>
    <td><%= User.find_by(id: t.user_id).username %></td>
    <td><%= User.find_by(id: t.user_id).upline %></td>
    <td><%= t.amount %></td>
    <td><%= t.created_at.strftime("%m/%d/%Y, %a, %I:%M%p") %></td>
    <td>
      <%= link_to "Edit", edit_cash_path(t), class: "btn btn-success" %>
    </td>
    <td>
      <%= link_to "Delete", cash_path(t), method: :delete, class: "btn btn-danger", data: { confirm: "Delete?"} %>
    </td>
    <td>
      <%= link_to "Add Cash", addcash_path({user_id: t.user_id}), method: :post, class: "btn btn-success" %>
    </td>
    <td>
      <%= link_to "Deduct Cash", deductcash_path({user_id: t.user_id}), method: :post, class: "btn btn-success" %>
    </td>
  </tr>
  <% end %>
</table>
