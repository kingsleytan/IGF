<div class="sessions new">
  <div class="content">

    <%= form_for(:user, url: sessions_path, method: :post, html: { id: "user-sign-in-form" }) do |f| %>
      <h1 class="white shadowed text-center">
        Sign In
      </h1>

      <div class="form-group">
        <h4> <%= f.label :username_field, "Username", class: "white shadowed" %> </h4>
        <%= f.text_field :username, required: true,  id: 'user_username_field', class: 'form-control' %>
      </div>

      <div class="form-group">
        <h4> <%= f.label :password_field, "Password", class: "white shadowed" %> </h4>
        <%= f.password_field :password, required: true, id: 'user_password_field', class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Log me in!", class: "btn btn-primary btn-lg" %>
      </div>

      <h5 class="text-center">
        <%= link_to "I don't have an account yet", new_user_path, class: 'white shadowed sign-in-link' %>
      </h5>

      <h5 class="text-center">
        <%= link_to "I forgot my password", new_password_reset_path, class: 'white shadowed sign-in-link' %>
      </h5>
    <% end %>
  </div>
</div>
