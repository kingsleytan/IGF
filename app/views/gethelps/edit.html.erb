<%= form_for(@gethelp, url: gethelp_path(@gethelp), html: { id: "gethelp-update-form" }) do |f| %>
<h1 class="text-center"> Gethelp Transfer </h1>


<div class="form-group">
  <h4> <%= f.label :number_field, "Transfer Amount" %> </h4>
  <%= f.text_field :transfer_amount, required: true, id: "transfer_amount_field", class: 'form-control' %>
</div>
<div class="form-group">
  <h4> <%= f.label :text_field, "Transfer To" %> </h4>
  <%= f.text_field :transfer_user_id, required: true, id: "transfer_user_id_field", class: 'form-control' %>
</div>
<div class="form-group">
  <h4> <%= f.label :text_field, "Activation gethelp" %> </h4>
  <%= f.text_field :transfer_user_id, required: true, id: "transfer_user_id_field", class: 'form-control' %>
</div>

<div class="form-group text-center">
  <%= f.submit "Transfer gethelp", class: "btn btn-success btn-lg" %>
</div>
<% end %>
